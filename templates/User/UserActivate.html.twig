{% extends 'base.html.twig' %}

{% block title %}Activate Account{% endblock %}

{% block body %}

    <h1>Zanim aktywujesz konto musisz uzupełnić parę informacji o sobie</h1>

    {{ form_start(form) }}
    {{ form_row(form.growth) }}
    {{ form_row(form.physique) }}
    {{ form_row(form.hair_length) }}
    {{ form_row(form.hair_color) }}
    {{ form_row(form.eye_color) }}
    {{ form_row(form.age) }}

    <button type="submit" class="btn">Aktywuj</button>

    {{ form_end(form) }}

{% endblock %}